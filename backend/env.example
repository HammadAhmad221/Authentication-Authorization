# Server Configuration
PORT=5000
NODE_ENV=development

# Database
# MongoDB Atlas (Recommended for cloud)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/auth_db?retryWrites=true&w=majority
# Local MongoDB (Alternative)
# MONGODB_URI=mongodb://localhost:27017/auth_db

# JWT Secrets
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Email Configuration (for email verification and password reset)
# For Gmail: Enable "Less secure app access" or use App Password
# For production: Use SendGrid, AWS SES, or similar service
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_or_password
EMAIL_FROM_NAME=Auth System

# SMTP Configuration (alternative to EMAIL_SERVICE)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587

# Logging
LOG_LEVEL=info

